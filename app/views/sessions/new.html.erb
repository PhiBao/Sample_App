<% provide(:title, t("sessions.new.login")) %> 
<h1><%= t "sessions.new.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
    <% end %>
    
    <p><%= t "sessions.new.new_user" %> <%= link_to t("static_pages.signup"), signup_path %></p>
  </div>
</div>